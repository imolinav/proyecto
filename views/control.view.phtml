        }

        function Scene(id_escena, accion, fecha) {
            this.id_escena = id_escena;
            this.accion = accion;
            this.fecha = fecha;
        }

        function SocketData(disp, action, date, temp, repeats, weekly) {
            this.disp = disp;
            this.action = action;
            this.date = date;
            this.temp = temp;
            this.repeats = repeats;
            this.weekly = weekly;
        }

